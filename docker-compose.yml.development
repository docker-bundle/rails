version: '3'
services:
  app:
    command:  sh -c "WEBPACKER_DEV_SERVER_HOST=0.0.0.0 bin/webpack-dev-server & bundle exec rails s -b 0.0.0.0 -p 3000 -P /tmp/server.pid"
    ports:
      # webpack-dev-server
      - "3035:3035"
      # site
      - "${DEVELOPMENT_PORT}:3000"
    environment:
      RAILS_SERVE_STATIC_FILES: 1
