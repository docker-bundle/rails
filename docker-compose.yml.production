version: '3'
services:
  redis:
    restart: always
  db:
    restart: always
  app:
    command:  sh -c "SECRET_KEY_BASE=`bundle exec rails secret` bundle exec rails s -b 0.0.0.0 -p 3000 -P /tmp/server.pid"
    restart: always
    ports:
      # site
      - "3200:3000"
    environment:
      RAILS_ENV: production
      RAILS_SERVE_STATIC_FILES: 1


